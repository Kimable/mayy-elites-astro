---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics  
  <script defer src="https://www.googletagmanager.com/gtag/js?id=UA-156450350-3"></script>
  <script defer>
